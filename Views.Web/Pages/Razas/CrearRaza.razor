@page "/raza/crear"
@using Logic
@using Models.Entity
@inject NavigationManager Navigation
@code {
    private Models.Entity.Models.Raza nuevaRaza = new Models.Entity.Models.Raza();

    private async Task GuardarRaza()
    {
        bool resultado = await RazasLogic.Crear(nuevaRaza);
        if (resultado)
        {
            Navigation.NavigateTo("/raza");
        }
    }
}
<h3 class="mb-4">Crear Nueva Raza</h3>

<div class="mb-3">
    <label class="form-label">Nombre:</label>
    <input class="form-control" @bind="nuevaRaza.Nombre" />
</div>

<div>
    <button class="btn btn-primary me-2" @onclick="GuardarRaza">Guardar</button>
    <button class="btn btn-secondary" @onclick="@(() => Navigation.NavigateTo("/raza"))">Cancelar</button>
</div>

